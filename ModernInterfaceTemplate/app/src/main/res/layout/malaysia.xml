<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/background"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Malaysia is no stranger to the dengue fever pandemic. Dengue is one of the most well-known diseases in Malaysia as many people end up contracting the disease due to various causes."
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="6dp"
            android:text="Malaysia has accumulated over 100,000 cases of recorded dengue cases from 1999 till the present. The graph below illustrates the amount of cases throughout the years as well as the number of casualties it caused"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="407dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/casesinmalaysia" />

        <TextView
            android:layout_marginTop="6dp"
            android:text="Source: The Star"
            android:textSize="10dp"
            android:textColor="#000000"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>




    </LinearLayout>

</ScrollView>
