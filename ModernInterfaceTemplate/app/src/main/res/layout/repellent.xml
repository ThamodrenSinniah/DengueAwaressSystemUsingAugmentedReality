<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/background"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtdashboard"
            android:text=""
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@+id/txtdashboard"
            android:layout_marginTop="6dp"
            android:text="There are a few ways to repel mosquitoes from your home besides spraying pesticide.
            Here are some ways, including some natural ways, to repel mosquitoes "
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="182dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/netscreen" />


        <TextView
            android:layout_marginTop="6dp"
            android:text="Net sceeens help keeping out mosquitoes from entering your home"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="182dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/camphor" />

        <TextView
            android:layout_marginTop="6dp"
            android:textSize="15dp"
            android:text="Camphor releases overwhelming mosquito with their odor and confuses them"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="182dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:src="@drawable/tusli" />

        <TextView
            android:layout_marginTop="6dp"
            android:text="Growing Tusli plants can kill larva of mosquitoes and it can help keep mosquitoes away"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="182dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:src="@drawable/lavenderoil" />

        <TextView
            android:layout_marginTop="6dp"
            android:text="Lavender contains compound known as linalool which produces a strong odor that is pleasant to hus but detestable to mosquitoes"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>



    </LinearLayout>

</ScrollView>
