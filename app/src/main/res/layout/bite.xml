<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/background"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtdashboard"
            android:text="Another way to prevent getting dengue fever is to avoid getting bitten by an Aedes Mosquito. These bites will transport the virus from the mosquito to your bloodstream which will allow the virus to spread in your body"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@+id/txtdashboard"
            android:layout_marginTop="6dp"
            android:text="There are various ways to keep yourself from getting bitten"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="40dp"
            android:layout_gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bite" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_marginTop="6dp"
            android:text="A mosquito bite can also leave a nasty stinging sensation which is not to be desired for. Here are some tips to prevent from getting bitten"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="182dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/mosquitorepellent" />


        <TextView
            android:layout_marginTop="6dp"
            android:text="Spray yourself with mosquito repellent before heading out"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="40dp"
            android:layout_gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="182dp"
            android:scaleType="fitXY"
            android:src="@drawable/dusk" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginTop="6dp"
            android:text="Avoid heading outdoors from 5:30am to 8:00am in the morning and from 5:30pm to 8:00pm in the evening"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="40dp"
            android:layout_gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="182dp"
            android:scaleType="fitXY"
            android:textAlignment="center"
            android:src="@drawable/longsleeve" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="6dp"
            android:text="Wear long sleeved shirt if outside during high mosquito activities"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>



    </LinearLayout>

</ScrollView>
