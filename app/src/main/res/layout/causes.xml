<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/background"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtdashboard"
            android:text="The main cause of Dengue Fever is the increasing number of Aedes mosquitoes that are constantly being reproduced. Aedes mosquitoes love clean and stagnant water that can easily be found in our homes."
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@+id/txtdashboard"
            android:layout_marginTop="6dp"
            android:text="The images below show the different spots Aedes mosquitoes would preferably breed"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="40dp"
            android:layout_gravity="center">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="182dp"
            android:scaleType="fitXY"
            android:src="@drawable/tyre" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:text="Stagnant water in tyres"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="40dp"
            android:layout_gravity="center">
        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="182dp"
            android:scaleType="fitXY"
            android:src="@drawable/pots" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:text="Stagnant water in flower pots"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="40dp"
            android:layout_gravity="center">

        <ImageView
            android:id="@+id/img3"
            android:layout_width="wrap_content"
            android:layout_height="182dp"
            android:scaleType="fitXY"
            android:src="@drawable/gutter" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:text="Stagnant water in flower pots"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>




    </LinearLayout>

</ScrollView>
