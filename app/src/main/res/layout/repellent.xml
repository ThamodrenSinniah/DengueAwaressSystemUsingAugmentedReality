<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/background"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtdashboard"
            android:text=""
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@+id/txtdashboard"
            android:layout_marginTop="6dp"
            android:text="There are a few ways to repel mosquitoes from your home besides spraying pesticide.
            Here are some ways, including some natural ways, to repel mosquitoes "
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="40dp"
            android:layout_gravity="center">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="182dp"
            android:scaleType="fitXY"
            android:src="@drawable/netscreen" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="6dp"
            android:text="Net sceeens help keeping out mosquitoes from entering your home"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="40dp"
            android:layout_gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="182dp"
            android:scaleType="fitXY"
            android:src="@drawable/camphor" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="6dp"
            android:textSize="15dp"
            android:text="Camphor releases overwhelms mosquito with their odor and confuses them"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="40dp"
            android:layout_gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="182dp"
            android:scaleType="fitXY"
            android:textAlignment="center"
            android:src="@drawable/tusli" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginTop="6dp"
            android:text="Growing Tusli plants can kill larva of mosquitoes and it can help keep mosquitoes away"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="40dp"
            android:layout_gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="182dp"
            android:scaleType="fitXY"
            android:textAlignment="center"
            android:src="@drawable/lavenderoil" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginTop="6dp"
            android:text="Lavender contains compound known as linalool which produces a strong odor that is pleasant to us but detestable to mosquitoes"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>



    </LinearLayout>

</ScrollView>
